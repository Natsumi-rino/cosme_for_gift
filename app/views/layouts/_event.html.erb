<% events = ["成人の日", "バレンタインデー", "ホワイトデー", "卒業式・追いコン",
             "入学式", "こどもの日", "母の日", "父の日", "敬老感謝の日",
             "ハロウィン", "クリスマス"] %>
<% months = ["1月", "2月", "3月", "4月", "5月", "6月", 
             "7月", "8月", "9月", "10月", "11月", "12月"] %>

<div class="events col-md-3">
  イベントから探す
  <ul>
    <% events.each do |event| %>
      <li>
        <%= event %>
      </li>
    <% end %>
  </ul>
  誕生月から探す
  <ul>
    <% months.each do |month| %>
      <li>
        <%= month %>
      </li>
    <% end %>
  </ul>
</div>
<%= stylesheet_link_tag 'gift' %>
<% provide(:title, "ギフト一覧") %>

<div class="col-md-9">
<div class="price-wrapper">
        <h2>価格帯・ブランド別</h2>
</div>
      <div class="price">
        <ul id="price-list">
          <li class="price-list-item">
            <h3 class="list-name">プチプラ</h3>
            <span>+</span>
            <div class="answer">
                <% @petitprice.each do |brand| %>
                  <div class="row">
                    <%= brand["brand_name"] %><br><br>
                    <% brand["products"].each do |product| %>
                      <div class="col-md-4">
                        <div class="thumbnail">
                          <%= image_tag product["image_url"]%>
                          <div class="caption">
                            <h5><%= link_to product["item_name"], product["shopping_link"] %></h5>
                            <h6><%= product["price"] %></h6>
                            <span class="time">
                              <%= product["release_at"] %>
                            </span>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
            </div>
          </li>
          <li class="price-list-item">
